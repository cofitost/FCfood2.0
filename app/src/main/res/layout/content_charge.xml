<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cofitost.fcfood20.ChargeActivity"
    tools:showIn="@layout/activity_charge">

    <TextView
        android:id="@+id/tv_charge_foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="餐點："
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="50sp"/>
    <EditText
        android:id="@+id/edt_charge_foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_charge_foodName"
        android:layout_alignLeft="@id/tv_charge_foodName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/tv_charge_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="價錢："
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@id/edt_charge_foodName"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"/>
    <EditText
        android:id="@+id/edt_charge_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_charge_price"
        android:layout_alignLeft="@id/tv_charge_foodName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/tv_charge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期："
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@id/edt_charge_price"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"/>
    <EditText
        android:id="@+id/edt_charge_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_charge_date"
        android:layout_alignLeft="@id/tv_charge_foodName"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15sp"
        android:layout_marginTop="10sp"/>

    <Button
        android:id="@+id/btn_charge_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="20sp"
        android:layout_below="@id/edt_charge_date"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
