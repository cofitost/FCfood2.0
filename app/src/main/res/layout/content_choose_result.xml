<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cofitost.fcfood20.ChooseResultActivity"
    tools:showIn="@layout/activity_choose_result">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店名："
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/tv_result_storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="30sp"
        android:textColor="#00DD00"
        android:layout_below="@id/tv_title1"
        android:layout_alignLeft="@id/tv_title1"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/tv_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="餐點："
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_result_storeName"
        android:layout_alignLeft="@id/tv_result_storeName"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/tv_result_foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="30sp"
        android:textColor="#00DD00"
        android:layout_below="@id/tv_title2"
        android:layout_alignLeft="@id/tv_title2"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/tv_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="價格："
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_result_foodName"
        android:layout_alignLeft="@id/tv_result_foodName"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/tv_result_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="30sp"
        android:textColor="#00DD00"
        android:layout_below="@id/tv_title3"
        android:layout_alignLeft="@id/tv_title3"
        android:layout_marginTop="10sp"/>

    <TextView
        android:id="@+id/tv_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址："
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_result_price"
        android:layout_alignLeft="@id/tv_result_price"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/tv_result_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="null"
        android:textSize="30sp"
        android:textColor="#00DD00"
        android:layout_below="@id/tv_title4"
        android:layout_alignLeft="@id/tv_title4"
        android:layout_marginTop="10sp"/>

</RelativeLayout>
